##
# This server allows a wildcard VirtualHost, so for example, going to:
#
# http://pete.training.example.com
#
# ... will set the webroot for the request to /home/pete/www/training
#
<VirtualHost *:80>
  ServerAdmin you@fourkittens.com
  DocumentRoot /home/vagrant/public_html

  # Disallow all search engines from spidering dev sites.
  <Location "/robots.txt">
    SetHandler None
  </Location>
  Alias /robots.txt /var/www/robots.txt

  <Directory /home/vagrant/public_html>
    Options Indexes FollowSymLinks
    AllowOverride None
    Require all granted
  </Directory>

</VirtualHost>
